<h1>Lists{{#if queryUsed}} with '{{query}}'{{/if}}</h1>

<ul>
{{#each lists}}
	<li>
		<a href="/lists/{{id}}">{{name}} ({{items.length}} items)</a>
	</li>
{{/each}}
</ul>

<h1>Create new list</h1>

<div class="card">
	<div class="card-body">
	<form action="/lists/new" method="POST">
			<div class="form-group row">
				<label for="inputName" class="col-sm-2 col-form-label">Name</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" placeholder="name" id="inputName" name="name">
					<small class="form-text text-muted">This name needs to be unique</small>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Create</button>
	</form>
	</div>
</div>